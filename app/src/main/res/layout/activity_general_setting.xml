<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.02" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.02" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.98" />

                <TextView
                    android:id="@+id/tvStrategyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="전략 이름 : "
                    android:gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    app:layout_constraintTop_toTopOf="@+id/guidelineTop" />

                <EditText
                    android:id="@+id/etStrategyName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:padding="10dp"
                    app:layout_constraintStart_toEndOf="@+id/tvStrategyName"
                    app:layout_constraintTop_toTopOf="@+id/guidelineTop" />

                <TextView
                    android:id="@+id/tvCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="종목 코드 : "
                    android:gravity="center"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    app:layout_constraintTop_toBottomOf="@+id/etStrategyName"/>

                <EditText
                    android:id="@+id/etCode"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:padding="10dp"
                    app:layout_constraintStart_toEndOf="@+id/tvCode"
                    app:layout_constraintTop_toBottomOf="@+id/etStrategyName"/>


                <TextView
                    android:id="@+id/tvAutoTrader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="매매 계좌 :"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    app:layout_constraintTop_toBottomOf="@+id/etCode" />

                <Spinner
                    android:id="@+id/spnAccount"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="14dp"
                    app:layout_constraintStart_toEndOf="@+id/tvAutoTrader"
                    app:layout_constraintTop_toBottomOf="@+id/etCode" />

                <CheckBox
                    android:id="@+id/cbSimulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="시뮬레이션"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                    app:layout_constraintTop_toBottomOf="@+id/etStrategyName" />


                <TextView
                    android:id="@+id/tvAutoTraderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/tvAutoTrader"
                    app:layout_constraintTop_toBottomOf="@+id/etStrategyName" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="77dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="저장"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                    app:layout_constraintTop_toTopOf="@+id/guidelineTop" />

                <TextView
                    android:id="@+id/tvProfitCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="매매 손익 기준 설정"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    app:layout_constraintTop_toBottomOf="@+id/spnAccount" />

                <TextView
                    android:id="@+id/tvMaxLoss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="최대 손해 : "
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/etMaxLoss"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvProfitCondition" />

                <EditText
                    android:id="@+id/etMaxLoss"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:padding="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/tvMaxEarn"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvMaxLoss"
                    app:layout_constraintTop_toBottomOf="@+id/tvProfitCondition" />

                <TextView
                    android:id="@+id/tvMaxEarn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="최대 이익 : "
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/etMaxProfit"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/etMaxLoss"
                    app:layout_constraintTop_toBottomOf="@+id/tvProfitCondition" />

                <EditText
                    android:id="@+id/etMaxProfit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvMaxEarn"
                    app:layout_constraintTop_toBottomOf="@+id/tvProfitCondition" />

                <TextView
                    android:id="@+id/tvTradeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="매매 시간 설정"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                    app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                    app:layout_constraintTop_toBottomOf="@+id/etMaxProfit" />

                <TextView
                    android:id="@+id/tvStartHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="시작 : "
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/etStartHour"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/guidelineLeft"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTradeTime" />

                <EditText
                    android:id="@+id/etStartHour"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/tvStartTimeDivider"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvStartHour"
                    app:layout_constraintTop_toBottomOf="@+id/tvTradeTime" />

                <TextView
                    android:id="@+id/tvStartTimeDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text=":"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/etStartMin"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/etStartHour"
                    app:layout_constraintTop_toBottomOf="@+id/tvTradeTime" />

                <EditText
                    android:id="@+id/etStartMin"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/tvEndHour"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvStartTimeDivider"
                    app:layout_constraintTop_toBottomOf="@+id/tvTradeTime" />


                <TextView
                    android:id="@+id/tvEndHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="28dp"
                    android:text="종료 : "
                    android:textSize="15sp"
                    app:layout_constraintEnd_toStartOf="@+id/etEndHour"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/etStartMin"
                    app:layout_constraintTop_toBottomOf="@+id/tvTradeTime" />

                <EditText
                    android:id="@+id/etEndHour"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/tvEndTimeDivider"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvEndHour"
                    app:layout_constraintTop_toBottomOf="@+id/tvTradeTime" />

                <TextView
                    android:id="@+id/tvEndTimeDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text=":"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/etEndMin"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/etEndHour"
                    app:layout_constraintTop_toBottomOf="@+id/tvTradeTime" />

                <EditText
                    android:id="@+id/etEndMin"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvEndTimeDivider"
                    app:layout_constraintTop_toBottomOf="@+id/tvTradeTime" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>